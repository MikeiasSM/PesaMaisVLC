unit PesaMaisVCL.View.Main;

interface

uses
  Winapi.Windows,
  Winapi.Messages,
  System.SysUtils,
  System.Variants,
  System.Classes,
  Vcl.Graphics,
  Vcl.Controls,
  Vcl.Forms,
  Vcl.Dialogs,
  Vcl.ExtCtrls,
  PesaMaisVCL.View.Styles.FontColors, Vcl.Buttons, Vcl.ComCtrls;

type
  TFrmMain = class(TForm)
    pnlMain: TPanel;
    pnlRodape: TPanel;
    Panel3: TPanel;
    pnlMenu: TPanel;
    pnlPrincipal: TPanel;
    pnlEmpresa: TPanel;
    procedure FormCreate(Sender: TObject);
  private
    { Private declarations }

    procedure setStyles;
  public
    { Public declarations }
  end;

var
  Form1: TFrmMain;

implementation


{$R *.dfm}

{ TForm1 }

procedure TFrmMain.FormCreate(Sender: TObject);
begin
  setStyles;
end;

procedure TFrmMain.setStyles;
begin
  pnlMenu.Color    := COLOR_PRIMARY;
  pnlEmpresa.Color := COLOR_PRIMARY;
end;

end.
